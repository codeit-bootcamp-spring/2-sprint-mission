<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- 로그 패턴 정의 -->
  <appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- 로그 파일 저장 경로 -->
  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
    <encoder>
      <pattern>${LOG_PATTERN}</pattern>
    </encoder>
    <file>${LOG_DIR}/application.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- 일자별 롤링 파일명 패턴 -->
      <fileNamePattern>${LOG_DIR}/application.%d{yyyy-MM-dd}.log</fileNamePattern>
      <!-- 30일간 보관 -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>
  </appender>

  <!-- 콘솔 출력 설정 -->
  <logger level="DEBUG" name="com.example"/>

  <!-- 파일 출력 설정 (일자별 롤링) -->
  <property name="LOG_DIR" value="${user.dir}/.logs"/>

  <!-- 루트 로거 설정 -->
  <property name="LOG_PATTERN"
    value="%d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

  <!-- 애플리케이션 패키지의 로그 레벨 설정 -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>
